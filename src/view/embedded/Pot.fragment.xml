<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
>
	<VBox
		width="10rem">
		<VBox
			visible="{
				path: 'events>pot/material',
				formatter: '.formatter.existsAndNotEmpty'
			}"
			class="sapUiTinyMarginTop"
		>
			<Label
				design="Bold"
				text="Material"
				class="sapUiTinyMarginEnd"
			/>
			<Label
				text="{
					path: 'events>pot/material'
				}"
				wrapping="true"
			/>
		</VBox>
		<VBox
			visible="{
				path: 'events>pot/shape_top',
				formatter: '.formatter.existsAndNotEmpty'
			}"
			class="sapUiTinyMarginTop"
		>
			<Label
				design="Bold"
				text="Shape (top)"
				class="sapUiTinyMarginEnd"
			/>
			<Label
				text="{
					path: 'events>pot/shape_top'
				}"
				wrapping="true"
			/>
		</VBox>
		<VBox
			visible="{
				path: 'events>pot/shape_side',
				formatter: '.formatter.existsAndNotEmpty'
			}"
			class="sapUiTinyMarginTop"
		>
			<Label
				design="Bold"
				text="Shape (Side)"
				class="sapUiTinyMarginEnd"
			/>
			<Label
				text="{
					path: 'events>pot/shape_side'
				}"
				wrapping="true"
			/>
		</VBox>
		<VBox
			visible="{
				path: 'events>pot/diameter_width',
				formatter: '.formatter.existsAndNotEmpty'
			}"
			class="sapUiTinyMarginTop"
		>
			<Label
				design="Bold"
				text="Diameter/Width (in cm)"
				class="sapUiTinyMarginTop"
			/>
			<Label
				text="{
					path: 'events>pot/diameter_width'
				}"
				wrapping="true"
			/>
		</VBox>
	</VBox>
</core:FragmentDefinition>