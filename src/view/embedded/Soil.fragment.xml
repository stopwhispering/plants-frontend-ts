<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
>
	<VBox
		width="10rem"
	>
		<VBox
			visible="{
				path: 'events>soil/soil_name',
				formatter: '.formatter.existsAndNotEmpty'
			}"
			class="sapUiTinyMarginTop"
		>
			<Label
				design="Bold"
				text="{
					path: 'events>soil/soil_name'
				}"
				wrapping="true"
			/>
		</VBox>
		<VBox
			visible="{
				path: 'events>soil/mix',
				formatter: '.formatter.existsAndNotEmpty'
			}"
			class="sapUiTinyMarginTop sapUiTinyMarginEnd"
		>
			<Text
				class="unobtrusiveText"
				text="{
					path: 'events>soil/mix'
				}"
			/>
		</VBox>
	</VBox>
</core:FragmentDefinition>