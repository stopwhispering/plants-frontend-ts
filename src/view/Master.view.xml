<mvc:View
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	controllerName="plants.ui.controller.Master"
	height="100%"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.f"
	xmlns:custom="plants.ui.control"
	class="sapUiSizeCompact"
	
	
>
	<f:DynamicPage
		toggleHeaderOnTitleClick="false"
		class="sapUiNoContentPadding"
	>
		<f:content>
			<Table
				id="plantsTable"
				growing="true"
				growingThreshold="30"
				growingScrollToLoad="true"
				showSeparators="Inner"
				items="{
					path: 'plants>/PlantsCollection',
					sorter: {
						path: 'plant_name'
					},
					filters: [{
						path: 'active',
						operator: 'EQ',
						value1: true
					}],
					templateShareable: false
				}"
				class="myVeryCompactTable sapFDynamicPageAlignContent"
				width="auto"
				sticky="HeaderToolbar,ColumnHeaders"
			>
				<headerToolbar>
					<OverflowToolbar
						asyncMode="true"
						design="Info"
					>
						<SearchField
							search="onSearch"
							width="13rem"
						/>
						<Label
							id="pageHeadingTitle"
							class="sapUiVisibleOnlyOnDesktop"
							text="Plants ({
								path: 'plants>/PlantsCollection',
								formatter: '.formatter.countPlants'
							})"
						/>
						<ToolbarSpacer/>
						<OverflowToolbarButton
							icon="sap-icon://e-care"
							tooltip="{i18n>new_plant}"
							type="Ghost"
							press=".onAddNewPlant"
						/>
						<OverflowToolbarButton
							icon="sap-icon://tag"
							tooltip="Add Tag"
							type="Accept"
							press=".onAddTagToSelectedPlants"
							visible="{status>/master_plants_selectable}"
						/>
						<OverflowToolbarButton
							icon="sap-icon://multi-select"
							tooltip="Multi-Select"
							type="Ghost"
							press=".onToggleMultiSelectPlants"
						/>
						<OverflowToolbarButton
							icon="sap-icon://sort"
							tooltip="{i18n>sort}"
							type="Ghost"
							press=".onShowSortDialog"
						/>
						<OverflowToolbarButton
							id="btnShowFilterDialog"
							icon="sap-icon://filter"
							tooltip="Filter"
							type="Ghost"
							press=".onShowFilterDialog"
						/>
					</OverflowToolbar>
				</headerToolbar>
				<infoToolbar>
					<OverflowToolbar
						id="tableFilterBar"
						visible="{status>/filterBarVisible}"
					>
						<Text id="tableFilterLabel"
							text="{status>/filterBarLabel}"/>
					</OverflowToolbar>
				</infoToolbar>
				<columns>
					<Column
						styleClass="myVeryCompact"
						width="{= (${device>/system/phone}) ? 10 : 11 }em"
					>
						<Text text="{i18n>plants_table_header_name}"/>
					</Column>
					<Column
						width="{= (${device>/system/phone}) ? 7 : 8 }em"
						minScreenWidth="Phone"
						styleClass="myVeryCompact"
						demandPopin="true"
						popinDisplay="WithoutHeader"
					>
						<Text text="Tags"/>
					</Column>
					<Column
						minScreenWidth="30em"
						width="6.0em"
						styleClass="myVeryCompact"
					>
						<Text text="{i18n>plants_table_header_image_date}"/>
					</Column>
					<!--show soil column only in desktop full screen mode-->
					<Column
						minScreenWidth="40em"
						width="12em"
						styleClass="myVeryCompact"
					>
						<Text text="Soil"/>
					</Column>
					<!-- todo
					
						width="4rem" -->
					<Column
						width="4rem"
						hAlign="End"
						styleClass="myVeryCompact"
					>
						<Text text=""/>
					</Column>
				</columns>
				<items>
					<ColumnListItem
						type="Navigation"
						press="onListItemPress"
					>
						<cells>
							<!-- plant name and botanical name plus icons for propagation type and geographic origin-->
							<HBox justifyContent="SpaceBetween">
								<VBox>
									<Label 
										text="{plants>plant_name}" 
										design="Bold" 
										wrapping="true"
										tooltip="{plants>id} - {plants>plant_name}" />
									<FormattedText 
										visible="{= !!${plants>full_botanical_html_name} }"
										htmlText="{plants>full_botanical_html_name}"
										tooltip="{plants>id} - {plants>plant_name}"
										/>
								</VBox>
								<VBox>
									<Image
										src="css/seed.png"
										height="1.2em"
										width="1.2em"
										visible="{
											path: 'plants>propagation_type',
											formatter: '.formatter.visibleByPropagationType'
										}"
									>
										<layoutData>
											<FlexItemData growFactor="1"/>
										</layoutData>
									</Image>
									<Image
										src="css/region.png"
										height="1.2em"
										width="1.2em"
										visible="{
											path: 'plants>geographic_origin',
											formatter: '.formatter.visibleByGeographicOrigin'
										}"
									>
										<layoutData>
											<FlexItemData growFactor="1"/>
										</layoutData>
									</Image>
								</VBox>
							</HBox>
							<!-- tags -->
							<HBox
								items="{
									path: 'plants>tags',
									templateShareable: false
								}"
								wrap="Wrap"
								visible="{
									path: 'plants>tags',
									formatter: '.formatter.existsAndNotEmpty'
								}"
							>
								<items>
									<ObjectStatus
										text="{plants>text}"
										icon="{plants>icon}"
										state="{plants>state}"
										inverted="true"
									/>
								</items>
							</HBox>
							<!-- latest image date -->
							<HBox>
								<ObjectIdentifier
									text="{
										path: 'plants>latest_image/record_date_time',
										formatter: '.formatter.timestampToDateShort'
									}"
									title="{
										path: 'plants>active',
										formatter: '.formatter.activeInactive'
									}"
								/>
								<core:Icon
									visible="{
										path: 'plants>latest_image/record_date_time',
										formatter: '.formatter.last_image_warning'
									}"
									src="sap-icon://away"
									class="sapUiTinyMarginBegin"
									color="#FF6600"
								/>
							</HBox>
							<!-- current soil name (hidden if no space available) -->
							<ObjectIdentifier
								title="{plants>current_soil/soil_name}"
								text="{plants>current_soil/date}"
							/>
							<!-- <HBox> -->
							<!-- <Avatar
								src="{
									path: 'plants>preview_image_id',
									formatter: '.formatter.getSrcAvatarImageS'
								}"
								displaySize="S"
								displayShape="Square"
								class="sapUiTinyMarginEnd"
								/> -->
								<!-- mode="Background"
								backgroundSize="contain"
								height="48px"
								backgroundPosition="center center" -->
							<custom:HoverImage
								width="48px"
								densityAware="true"
								visible="{= !!${plants>preview_image_id} }"
								src="{
									path: 'plants>preview_image_id',
									formatter: '.formatter.getSrcAvatarImageS'
								}"
								hover=".onHoverImage"
								/>
							<!-- </HBox> -->
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</f:content>
	</f:DynamicPage>
</mvc:View>