<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
>
	<Dialog
		title="New Plant"
		id="dialogNewPlant"
		class="sapUiContentPadding"
		contentWidth="1em"
	>
		<content>
			<Label text="Plant Name"/>
			<Input
				maxLength="60"
				value="{newPlantInputData>/newPlantName}"
			/>
		</content>
		<beginButton>
			<Button
				text="Save"
				press=".onSaveNewPlantButton"
			/>
		</beginButton>
		<endButton>
			<Button
				text="Cancel"
				press=".onCancelNewPlantDialog"
			/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>