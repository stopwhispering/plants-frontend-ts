<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
 
    <Dialog title = "New Plant"
    	id="dialogNewPlant"
		class="sapUiContentPadding"
    	contentWidth="1em">
 
	    <content>
	    	<Label
				text="Plant Name"
	  			labelFor="inputCreateNewPlantName"/>
	    	<Input
	    		maxLength="60"
	    		id="inputCreateNewPlantName"/>
	    </content>
	    
	    <beginButton>
		    <Button
	    		text="Save"
            	press="onAddSaveButton"/>
	    </beginButton>
	    
	    <endButton>
		    <Button
	    		text="Cancel"
            	press=".onCancelDialog('dialogNewPlant')"/>
	    </endButton>
    </Dialog>
</core:FragmentDefinition>