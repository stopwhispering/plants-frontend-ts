<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	
	<ViewSettingsDialog
		id="settingsDialogFilter"
		confirm=".onConfirmFilters"
		resetFilters="onResetFilters">
		
		<filterItems>
			<ViewSettingsFilterItem 
				text="Soil Mixes" 
				key="1"
				items="{filterValues>/soilNames}">
				<items>
					<ViewSettingsItem text="{filterValues>}" key="current_soil/soil_name___EQ___{filterValues>}" />
				</items>
			</ViewSettingsFilterItem>
			<ViewSettingsFilterItem 
				text="Nurseries / Sources"
				key="3"
				items="{filterValues>/nurseriesSources}">
				<items>
					<ViewSettingsItem text="{filterValues>}" key="nursery_source___EQ___{filterValues>}" />
				</items>
			</ViewSettingsFilterItem>
			<ViewSettingsFilterItem 
				text="Propagation Types"
				key="4"
				items="{filterValues>/propagationTypes}">
				<items>
					<ViewSettingsItem text="{filterValues>}" key="propagation_type___EQ___{filterValues>}" />
				</items>
			</ViewSettingsFilterItem>
			<ViewSettingsFilterItem 
				text="Tags" 
				key="2"
				items="{filterValues>/tags}">
				<items>
					<ViewSettingsItem text="{filterValues>}" key="tags/text___contains___{filterValues>}" />
				</items>
			</ViewSettingsFilterItem>
		</filterItems>
		
		<customTabs>

			<ViewSettingsCustomTab
				icon="sap-icon://tree" 
				title="Taxon Tree" 
				tooltip="Taxon Tree">
				<content>
					<Panel >
						<content>
							<Label 
								text="Families / Genera / Species" 
								design="Bold" />
						 	<Tree
								class="sapUiSizeCompact"
						 		selectionChange=".onSelectionChangeTaxonTree"
								id="taxonTree"
						 		items="{selection>/Selection/TaxonTree}"
							 	mode="MultiSelect"
								includeItemInSelection="true">
							    <StandardTreeItem
								    title="{selection>key}"
								    selected="{selection>selected}"
								    counter="{selection>count}"/>
							</Tree>
						</content>
					</Panel>
				</content>
			</ViewSettingsCustomTab>			
			
			<ViewSettingsCustomTab
				icon="sap-icon://action-settings" 
				title="Settings" 
				tooltip="Settings">
				<content>
					<Panel >
						<content>
						<Label 
							text="Hidden Plants" 
							design="Bold" />
						<SegmentedButton
							selectedKey="only_active"
							id="sbtnHiddenPlants"
							width="100%">
							<items>
								<SegmentedButtonItem 
									text="Only Active" 
									key="only_active"/>
								<SegmentedButtonItem 
									text="All" 
									key="both"/>
								<SegmentedButtonItem
									text="Only Hidden"
									key="only_hidden"/>
							</items>
						</SegmentedButton>
						</content>
					</Panel>
					
					<Panel >
						<content>
						<Label 
							text="Preview Image" 
							design="Bold" />
						<SegmentedButton
							id="sbtnPreviewImage"
							width="100%">
							<items>
								<SegmentedButtonItem 
									text="{i18n>settings_favourite_image}" 
									key="favourite_image"/>
								<SegmentedButtonItem 
									text="{i18n>settings_latest_image}" 
									key="latest_image"/>
							</items>
						</SegmentedButton>
						</content>
					</Panel>
				</content>
			</ViewSettingsCustomTab>
			
		</customTabs>		
		
	</ViewSettingsDialog>
</core:FragmentDefinition>