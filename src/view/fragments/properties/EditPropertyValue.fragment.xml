<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
 
   <Popover
		id="dialogEditPropertyValue"
		title="Edit Property Value"
		class="sapUiContentPadding"
		placement="Vertical"
		contentWidth="15em"
		initialFocus="inpPropertyValue">

		<content>
				<VBox>
					<Input
						id="inpPropertyValue"
						value="{properties>property_value}"
						submit=".onCloseDialogEditPropertyValue"/>
					
				</VBox>
		</content>

		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button
					text="Delete"
					icon="sap-icon://delete"
					type="Reject"
					press=".onEditPropertyValueDelete" />
			</OverflowToolbar>
		</footer>
		
	</Popover>
</core:FragmentDefinition>