<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
>
	<Popover
		id="dialogNewPropertyName"
		title="{properties>category_name}"
		class="sapUiContentPadding"
		placement="Vertical"
		contentWidth="16em"
		initialFocus="inpPropertyName"
		afterClose=".onAfterCloseNewPropertyNamePopover"
	>
		<content>
			<VBox>
				<Label
					text="New Property Name for {newPropertyNameInput>/propertyCategory/category_name}"
					wrapping="true"
				/>
					<!-- value="{properties>property_value}" -->
				<Input
					id="inpPropertyName"
					submit=".onNewPropertyNameCreate"
					value="{newPropertyNameInput>/propertyName}"
				/>
				<CheckBox
					id="chkNewPropertyNameAddToPlant"
					text="Add to Plant"
					selected="{newPropertyNameInput>/addToPlant}"
				/>
				<CheckBox
					id="chkNewPropertyNameAddToTaxon"
					text="Add to Taxon"
					selected="{newPropertyNameInput>/addToTaxon}"
				/>
			</VBox>
		</content>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button
					text="Create"
					icon="sap-icon://add"
					type="Accept"
					press=".onNewPropertyNameCreate"
				/>
			</OverflowToolbar>
		</footer>
	</Popover>
</core:FragmentDefinition>