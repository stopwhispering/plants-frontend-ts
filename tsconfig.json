{
    "compilerOptions": {
        "target": "es2020",
        "module": "es2020",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "preserveConstEnums": true,
        "inlineSourceMap": true,
        "allowJs": true,
        "strict": true,

        // when setting to true, "npx tsc" will result in error for each type error!
        "strictNullChecks": false,
        "strictPropertyInitialization": false,
        "rootDir": "./src",
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "plants/ui/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ]

    // when you use the @sapui5/ts-types-esm (or @openui5/ts-types-esm) types instead of @types/openui5@1.104.0, 
    // you need to add the following section
    // "typeRoots": [
    //     "./node_modules/@types"
    // ],
    // "types": [
    //     "@sapui5/ts-types-esm"
    // ],
}
