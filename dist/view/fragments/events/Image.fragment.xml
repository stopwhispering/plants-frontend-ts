<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:core="sap.ui.core">
	
	<f:GridListItem
		id="eventImageListItem"
		class="noBorder">
		
	    <Image
			src="{
					path: 'events>filename',
					formatter: '.formatter.getSrcImage120px'
					}"	
	    	width="120px">
	    	
	    	<detailBox>
				<LightBox>
					<LightBoxItem 
						imageSrc="{
								path: 'events>filename',
								formatter: '.formatter.getSrcImage'
								}"	
						alt="{plants>plant_name}"
						title="{plants>plant_name}"
						subtitle="">
					</LightBoxItem>
				</LightBox>
			</detailBox>
			
		</Image>
	
		<f:layoutData>
			<FlexItemData growFactor="1" shrinkFactor="0" />
		</f:layoutData>
	</f:GridListItem>

	
</core:FragmentDefinition>