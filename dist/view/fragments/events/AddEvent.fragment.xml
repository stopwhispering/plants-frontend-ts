<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	>
	<Dialog
		title="{i18n>header_event}"
		id="dialogEvent">
		<content>
			<IconTabBar
				id="idIconTabBarNoIcons"
				expanded="{device>/isNoPhone}"
				class="sapUiResponsiveContentPadding"
			>
				<items>
					<IconTabFilter
						id="tabGeneral"
						text="General"
					>
						<VBox class="sapUiTinyMarginBottom">
							<HBox>
								<VBox class="sapUiSmallMarginEnd">
									<Label
										text="Observation"
									/>
									<Switch 
										state="{editOrNewEvent>/segments/observation}"
										customTextOn=" " 
										customTextOff=" ">
										<layoutData>
											<FlexItemData growFactor="1" />
										</layoutData>
							</Switch>
								</VBox>
								<VBox class="sapUiSmallMarginEnd">
									<Label
										text="Pot"
									/>
									<Switch 
										state="{editOrNewEvent>/segments/pot}"
										customTextOn=" " 
										customTextOff=" ">
										<layoutData>
											<FlexItemData growFactor="1" />
										</layoutData>
									</Switch>
								</VBox>
								<VBox class="sapUiSmallMarginEnd">
									<Label
										text="Soil"
									/>
									<Switch 
										state="{editOrNewEvent>/segments/soil}"
										customTextOn=" " 
										customTextOff=" ">
										<layoutData>
											<FlexItemData growFactor="1" />
										</layoutData>
									</Switch>
								</VBox>
							</HBox>
						</VBox>
						<VBox class="sapUiTinyMarginBottom">
							<Label
								text="Date (YYYY-MM-DD)"
								wrapping="true"
								labelFor="maskDate"
								width="14em"
								required="true"
							/>
							<MaskInput
								required="true"
								id="maskDate"
								mask="9999-99-99"
								value="{editOrNewEvent>/date}"
								placeholder="Date"
							/>
						</VBox>
						<VBox class="sapUiTinyMarginBottom">
							<Label text="Notes"/>
							<TextArea
								width="14em"
								height="10em"
								value="{editOrNewEvent>/event_notes}"
							/>
						</VBox>
					</IconTabFilter>
					<IconTabFilter
						id="tabObservation"
						enabled="{= ${editOrNewEvent>/segments/observation}}"
						text="Observation"
					>
						<VBox class="sapUiTinyMarginBottom">
							<Label text="Height"/>
							<StepInput
								value="{editOrNewEvent>/observation/height}"
								displayValuePrecision="1"
								min="0"
								max="999"
								width="5em"
								step="0.5"
								largerStep="5"
								description="cm"
							/>
						</VBox>
						<VBox class="sapUiTinyMarginBottom">
							<Label text="Stem/Caudex diameter at max."/>
							<StepInput
								value="{editOrNewEvent>/observation/stem_max_diameter}"
								displayValuePrecision="1"
								min="0"
								max="999"
								width="5em"
								step="0.5"
								largerStep="5"
								description="cm"
							/>
						</VBox>
						<VBox class="sapUiTinyMarginBottom">
							<Label text="Diseases &amp; Treatments"/>
							<TextArea
								value="{editOrNewEvent>/observation/diseases}"
								height="6em"
							/>
						</VBox>
						<VBox class="sapUiTinyMarginBottom">
							<Label text="Other Observations"/>
							<TextArea
								value="{editOrNewEvent>/observation/observation_notes}"
								height="6em"
							/>
						</VBox>
					</IconTabFilter>
					<IconTabFilter
						id="tabPot"
						enabled="{= ${editOrNewEvent>/segments/pot}}"
						text="Pot"
					>
						<Label
							text="Pot Shape Side"
							required="true"
						/>
						<HBox>
							<!-- todo: put to some collection file -->
							<VBox
								alignItems="Center"
								class="sapUiTinyMarginEnd"
							>
								<Image
									src="css/pot_very_flat.png"
									width="60px"
									tooltip="very flat"
									press=".activateRadioButton"
									app:radiobuttonId="idPotHeight0"
								/>
								<RadioButton
									id="idPotHeight0"
									groupName="height"
								/>
							</VBox>
							<VBox
								alignItems="Center"
								class="sapUiTinyMarginEnd"
							>
								<Image
									src="css/pot_flat.png"
									width="60px"
									tooltip="flat"
									press=".activateRadioButton"
									app:radiobuttonId="idPotHeight1"
								/>
								<RadioButton
									id="idPotHeight1"
									groupName="height"
								/>
							</VBox>
							<VBox
								alignItems="Center"
								class="sapUiTinyMarginEnd"
							>
								<Image
									src="css/pot_high.png"
									width="60px"
									tooltip="high"
									press=".activateRadioButton"
									app:radiobuttonId="idPotHeight2"
								/>
								<RadioButton
									id="idPotHeight2"
									selected="true"
									groupName="height"
								/>
							</VBox>
							<VBox
								alignItems="Center"
								class="sapUiTinyMarginEnd"
							>
								<Image
									src="css/pot_very_high.png"
									width="60px"
									tooltip="very high"
									press=".activateRadioButton"
									app:radiobuttonId="idPotHeight3"
								/>
								<RadioButton
									id="idPotHeight3"
									groupName="height"
								/>
							</VBox>
						</HBox>
						<Label
							text="Pot Shape Top"
							required="true"
						/>
						<HBox>
							<!-- todo: put to some collection file -->
							<VBox
								alignItems="Center"
								class="sapUiTinyMarginEnd"
							>
								<Image
									src="css/square.png"
									height="60px"
									tooltip="square"
									press=".activateRadioButton"
									app:radiobuttonId="idPotShape0"
								/>
								<RadioButton
									id="idPotShape0"
									selected="true"
									groupName="shape"
								/>
							</VBox>
							<VBox
								alignItems="Center"
								class="sapUiTinyMarginEnd"
							>
								<Image
									src="css/circle.png"
									height="60px"
									tooltip="round"
									press=".activateRadioButton"
									app:radiobuttonId="idPotShape1"
								/>
								<RadioButton
									id="idPotShape1"
									groupName="shape"
								/>
							</VBox>
							<VBox
								alignItems="Center"
								class="sapUiTinyMarginEnd"
							>
								<Image
									src="css/oval.png"
									height="60px"
									tooltip="oval"
									press=".activateRadioButton"
									app:radiobuttonId="idPotShape2"
								/>
								<RadioButton
									id="idPotShape2"
									groupName="shape"
								/>
							</VBox>
							<VBox
								alignItems="Center"
								class="sapUiTinyMarginEnd"
							>
								<Image
									src="css/hexagonal.png"
									height="60px"
									tooltip="hexagonal"
									press=".activateRadioButton"
									app:radiobuttonId="idPotShape3"
								/>
								<RadioButton
									id="idPotShape3"
									groupName="shape"
								/>
							</VBox>
						</HBox>
						<VBox class="sapUiSmallMarginTop">
							<Label text="Width (square pot) or Diameter (other shapes) in cm"/>
							<StepInput
								value="{editOrNewEvent>/pot/diameter_width}"
								displayValuePrecision="1"
								min="0"
								max="999"
								width="5em"
								step="0.5"
								description="cm"
							/>
						</VBox>
						<VBox class="sapUiSmallMarginTop">
								<!-- required="True" -->
							<Label
								text="{i18n>pot_material}"
							/>
							<Select
								width="10rem"
								selectedKey="{editOrNewEvent>/pot/material}"
								items="{
									path: 'suggestions>/potMaterialCollection',
									sorter: {
										path: 'name'
									}
								}"
							>
								<core:Item
									key="{suggestions>name}"
									text="{suggestions>name}"
								/>
							</Select>
						</VBox>
					</IconTabFilter>
					<IconTabFilter
						id="tabSoil"
						text="Soil"
						enabled="{= ${editOrNewEvent>/segments/soil}}"
					>
						<List
							backgroundDesign="Transparent"
							id="soilList"
							items="{soils>/SoilsCollection}"
							mode="SingleSelectMaster"
							includeItemInSelection="true"
							selectionChange=".onSoilMixSelect"
							noDataText="No soil mixes found on server"
						>
							<items>
								<CustomListItem>
									<HBox>
										<VBox width="9rem">
											<HBox justifyContent="SpaceBetween">
												<Text
													text="{soils>soil_name}"
													width="6rem"
													class="sapUiSmallMarginEnd sapUiTinyMarginBottom"
												/>
												<Button
													icon="sap-icon://edit"
													tooltip="Edit Soil"
													type="Transparent"
													press=".onOpenDialogEditSoil"
												/>
											</HBox>
											<Label
												visible="{= !!${soils>plants_count} &amp;&amp; ${soils>plants_count} > 0 }"
												text="({soils>plants_count})"
											/>
										</VBox>
										<Text
											class="unobtrusiveText"
											text="{soils>mix}"
										/>
									</HBox>
								</CustomListItem>
							</items>
						</List>
						<Button
							id="btnNewSoil"
							text="New Soil"
							press=".onOpenDialogNewSoil"
							type="Accept"
						/>
					</IconTabFilter>
				</items>
			</IconTabBar>
		</content>
		<buttons>
			<!--text of add button is switched to "Edit" in controller if editing-->
			<Button
				id="btnEventUpdateSave"
				text="{i18n>add}"
				press=".onAddOrEditEvent"
				type="Accept"
			/>
			<Button
				text="{i18n>cancel}"
				type="Reject"
				press=".onCancelDialog"
			/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>